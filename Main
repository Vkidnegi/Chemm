        // --- Game State ---
        let currentElement = null;
        let score = 0;
        let spinsRemaining = 5;
        let hasAnsweredCurrentSpin = false; 
        let currentLevel = ''; 
        let hintUsed = false; 

        // UPDATED SCORING LOGIC
        const POINTS = {
            easy: 100,
            medium: 200,
            hard: 300
        };
        const POINTS_INCORRECT = -50; 

        // --- DOM Elements ---
        const wheelElement = document.getElementById('wheel');
        const spinButton = document.getElementById('spinButton');
        const scoreElement = document.getElementById('score');
        const spinsLeftDisplay = document.getElementById('spinsLeftDisplay');
        
        const elementDisplay = document.getElementById('elementDisplay');
        const elementNameDisplay = document.getElementById('elementNameDisplay');
        const elementSymbolDisplay = document.getElementById('elementSymbolDisplay');
        const atomicNumberDisplay = document.getElementById('atomicNumberDisplay');

        const easyCard = document.getElementById('easyCard');
        const mediumCard = document.getElementById('mediumCard');
        const hardCard = document.getElementById('hardCard');

        const modal = document.getElementById('questionModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalQuestion = document.getElementById('modalQuestion');
        const answerInput = document.getElementById('answerInput');
        const feedbackMessage = document.getElementById('feedbackMessage');
        const submitAnswerButton = document.getElementById('submitAnswerButton');
        
        const hintButton = document.getElementById('hintButton');
        const hintText = document.getElementById('hintText');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const finalScoreDisplay = document.getElementById('finalScoreDisplay');

        // --- Audio Manager ---
        const SoundManager = {
            clickSynth: null,
            correctSynth: null,
            incorrectSynth: null,

            init() {
                document.body.addEventListener('click', () => { Tone.start(); }, {once: true});
                this.clickSynth = new Tone.MembraneSynth({ volume: -5 }).toDestination();
                this.correctSynth = new Tone.PolySynth(Tone.Synth, { volume: -8 }).toDestination();
                this.incorrectSynth = new Tone.MembraneSynth({ volume: -2, pitchDecay: 0.05 }).toDestination();
            },
            spinSound(duration) {
                const now = Tone.now();
                let time = now;
                let interval = 0.05; 
                while (time < now + (duration / 1000)) {
                    this.clickSynth.triggerAttackRelease("C2", "32n", time);
                    time += interval;
                    interval *= 1.05; 
                }
            },
            playCorrect() {
                this.correctSynth.triggerAttackRelease(["C5", "E5", "G5", "C6"], "8n");
            },
            playIncorrect() {
                this.incorrectSynth.triggerAttackRelease("A1", "4n");
            }
        };

        // --- Core Functions ---

        function updateScore(points = 0) {
            score += points;
            scoreElement.textContent = score;
        }

        function updateSpins() {
            spinsLeftDisplay.textContent = spinsRemaining;
            if (spinsRemaining === 0) {
                endGame();
            }
        }

        function resetQuizState() {
            // Unlock visual state for spin animation
            [easyCard, mediumCard, hardCard].forEach(card => {
                card.className = "question-card bg-white p-6 rounded-2xl shadow-lg border-b-4 hover:bg-gray-50 group";
                card.classList.remove('answered', 'disabled-card', 'correct-bg', 'incorrect-bg');
                card.querySelector('[id$="Status"]').textContent = 'TAP TO START \u2192';
                
                // Add border colors back
                if(card.id === 'easyCard') card.classList.add('border-green-500');
                if(card.id === 'mediumCard') card.classList.add('border-yellow-500');
                if(card.id === 'hardCard') card.classList.add('border-red-500');
            });

            elementDisplay.classList.add('hidden');
            elementDisplay.classList.remove('visible');
        }

        function lockTurn() {
            // Disable all cards after an answer
            [easyCard, mediumCard, hardCard].forEach(card => {
                if(!card.classList.contains('answered')) {
                    card.classList.add('disabled-card');
                    card.querySelector('[id$="Status"]').textContent = 'LOCKED (Spin Again)';
                }
            });
            spinButton.classList.add('pulse-animation');
        }

        function spinWheel() {
            if (spinsRemaining <= 0) return;
            if (wheelElement.style.transitionDuration === '5s') return;

            // Decrement spins
            spinsRemaining--;
            updateSpins();
            hasAnsweredCurrentSpin = false; // Reset lock for new turn

            resetQuizState();
            spinButton.disabled = true;
            spinButton.classList.remove('pulse-animation');
            spinButton.textContent = "Spinning...";

            SoundManager.spinSound(5000);

            const newIndex = Math.floor(Math.random() * elementsData.length);
            const element = elementsData[newIndex];
            
            const segmentSize = 360 / elementsData.length; 
            const baseRotation = 360 * 8; 
            const centerAngleOfSegment = newIndex * segmentSize + (segmentSize / 2);
            const rotationNeeded = 360 - centerAngleOfSegment; 
            const finalRotation = baseRotation + rotationNeeded;

            wheelElement.style.transitionDuration = '5s';
            wheelElement.style.transform = rotate(${finalRotation}deg);

            setTimeout(() => {
                currentElement = element;
                updateElementDisplay(element);
                
                wheelElement.style.transitionDuration = '0s'; 
                wheelElement.style.transform = rotate(${rotationNeeded}deg); 
                
                if (spinsRemaining > 0) {
                    spinButton.disabled = false;
                    spinButton.textContent = "SPIN AGAIN";
                } else {
                    spinButton.textContent = "LAST TURN";
                }
            }, 5000); 
        }

        function updateElementDisplay(element) {
            elementDisplay.classList.remove('hidden');
            requestAnimationFrame(() => elementDisplay.classList.add('visible'));

            elementNameDisplay.textContent = element.name;
            elementSymbolDisplay.textContent = element.symbol;
            atomicNumberDisplay.textContent = element.Z;

            const colorClass = element.color;
            elementDisplay.style.borderColor = var(--tw-color-${colorClass}); 
            elementSymbolDisplay.className = text-9xl font-black leading-none text-${colorClass} drop-shadow-md;
            atomicNumberDisplay.className = text-7xl font-extrabold text-${colorClass} drop-shadow-sm;
        }

        // --- Modal Logic ---

        function openModal(level) {
            if (!currentElement) {
                alert("Please spin the wheel first!");
                return;
            }
            if (hasAnsweredCurrentSpin) {
                alert("You have already answered a question for this turn. Please spin again!");
                return;
            }

            currentLevel = level;
            const data = currentElement[level];
            const maxPoints = POINTS[level];
            
            // Reset Hint State
            hintUsed = false;
            hintText.classList.add('hidden');
            hintButton.disabled = false;
            hintButton.textContent = ðŸ’¡ Need a Hint? (Reward becomes +${maxPoints / 2});
            hintButton.classList.remove('opacity-50', 'cursor-not-allowed');

            modalTitle.textContent = ${level.toUpperCase()} (${currentElement.symbol}) - ${maxPoints} Pts;
            modalQuestion.textContent = data.q;
            answerInput.value = '';
            feedbackMessage.classList.add('hidden');
            submitAnswerButton.textContent = 'Submit';
            submitAnswerButton.disabled = false;
            modal.classList.remove('hidden');
            
            setTimeout(() => answerInput.focus(), 100);
        }

        function showHint() {
            if(!currentElement) return;
            hintUsed = true;
            hintText.textContent = currentElement[currentLevel].h;
            hintText.classList.remove('hidden');
            hintButton.textContent = "Hint Activated (Points Halved)";
            hintButton.disabled = true;
            hintButton.classList.add('opacity-50', 'cursor-not-allowed');
        }

        function closeModal() {
            modal.classList.add('hidden');
        }

        function submitAnswer() {
            const userAnswer = answerInput.value.trim().toLowerCase();
            const correctAnswer = currentElement[currentLevel].a.toLowerCase();
            const cleanAnswer = (str) => str.replace(/[^a-z0-9]/g, '');
            const isCorrect = cleanAnswer(userAnswer).includes(cleanAnswer(correctAnswer));

            feedbackMessage.classList.remove('hidden');
            submitAnswerButton.disabled = true;

            // Mark turn as complete
            hasAnsweredCurrentSpin = true;

            const card = document.getElementById(${currentLevel}Card);
            const status = document.getElementById(${currentLevel}Status);
            
            // Lock UI visually
            card.classList.add('answered');

            if (isCorrect) {
                const maxPoints = POINTS[currentLevel];
                const pointsEarned = hintUsed ? (maxPoints / 2) : maxPoints;
                
                SoundManager.playCorrect();
                updateScore(pointsEarned);
                
                // Only confetti if full points
                if (!hintUsed) {
                    confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 } });
                }
                
                feedbackMessage.textContent = Correct! +${pointsEarned} Points.;
                feedbackMessage.className = "text-center p-4 rounded-xl font-bold mb-6 text-lg bg-green-100 text-green-700";
                
                submitAnswerButton.textContent = 'Correct!';
                card.classList.add('correct-bg'); 
                status.textContent = CORRECT! (+${pointsEarned});
                
            } else {
                SoundManager.playIncorrect();
                updateScore(POINTS_INCORRECT);
                
                feedbackMessage.textContent = Incorrect! ${POINTS_INCORRECT} Points. Answer: "${currentElement[currentLevel].a}";
                feedbackMessage.className = "text-center p-4 rounded-xl font-bold mb-6 text-lg bg-red-100 text-red-700";
                
                submitAnswerButton.textContent = 'Incorrect';
                card.classList.add('incorrect-bg');
                status.textContent = INCORRECT (${POINTS_INCORRECT});
            }

            // Close modal after delay and lock turn
            setTimeout(() => {
                closeModal();
                lockTurn(); // Lock other cards
                
                // Check Game Over
                if (spinsRemaining === 0) {
                    setTimeout(endGame, 1000);
                }
            }, 1500);
        }

        function endGame() {
            finalScoreDisplay.textContent = score;
            gameOverScreen.classList.remove('hidden');
            gameOverScreen.classList.add('flex');
            
            // Victory Fanfare
            if (score > 0) {
                SoundManager.playCorrect();
                confetti({ particleCount: 300, spread: 100, origin: { y: 0.6 } });
            }
        }
        
        // --- Init ---
        window.onload = function() {
            SoundManager.init(); 
            updateScore(0);
            updateSpins();
        };

        // Close modal logic
        modal.addEventListener('click', function(e) {
            if (e.target === modal) closeModal();
        });
    </script>
</body>
</html>
